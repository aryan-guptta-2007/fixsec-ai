# FixSec AI Production Environment Variables
# Copy this to .env.production and fill in your values

# Environment
ENVIRONMENT=production
DEBUG=false

# Database (Railway will auto-generate this)
DATABASE_URL=postgresql://user:password@host:port/database

# GitHub OAuth (Get from GitHub Developer Settings)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Frontend URL (Your Vercel deployment URL)
FRONTEND_URL=https://your-app.vercel.app

# CORS Origins (Include your Vercel domain)
CORS_ORIGINS=https://your-app.vercel.app,http://localhost:3000

# Security (Generate a strong random string)
SECRET_KEY=fixsec_super_secret_2026_your_random_string_here

# Stripe (Get from Stripe Dashboard)
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRO_PRICE_ID=price_...
STRIPE_TEAM_PRICE_ID=price_...

# Optional: Monitoring
SENTRY_DSN=https://your-sentry-dsn

# Optional: Email notifications
SENDGRID_API_KEY=your_sendgrid_key
FROM_EMAIL=noreply@yourdomain.com